{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block css %}
<style>
 .lab{width: 20%}
 .lab{background:#BDBDBD}
 .bt{width: 150%}


</style>
{% endblock %}

{% block body %}
<h3>Personne</h3>
<div class="form-inline well">
{{ form_start(form) }}

<div class="form-group">
    {{ form_label(form.nom, 'Nome : ') }}
    {{ form_errors(form.nom) }}
    {{ form_widget(form.nom, {'attr':
      {
        'class': 'lab',


      }
    })
    }}
  </div>
  <div class="form-group">
      {{ form_label(form.daterentre, 'personne : ') }}

      {{ form_widget(form.daterentre, {'attr':
        {
          'class': 'lab',


        }
      })
      }}
    </div>

  <div class="form-group">
    {{ form_label(form.submit) }}
    {{
      form_widget(form.submit, {'attr': {
        'class': 'btn btn-xs btn-primary bt'
      }})
    }}
  </div>

{{ form_end(form) }}
</div>





{% endblock %}
